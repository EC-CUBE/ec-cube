{% extends 'default_frame.twig' %}

{% set body_class = 'checkout checkout_nonemember' %}

{% form_theme form 'Form/form_div_layout.twig' %}

{% block javascript %}
    {% include "Components/form/postcode_script.twig" %}
{% endblock javascript %}

{% block main %}
{% include "Components/heading.twig" with {'title': 'front.shopping.nonmember' } %}

{% include "Components/checkout/progress-bar.twig" with {'step2': 'is-complete' } %}

<div class="row">
    <div class="col-12">
        <form id="shopping-nonmember" method="post" action="{{ url('shopping_nonmember') }}" class="h-adr">
            <span class="p-country-name" style="display:none;">Japan</span>
            {{ form_widget(form._token) }}
            {# Name #}
            {% include "Components/form/name.twig" with {'form': form} %}

            {# Kanna #}
            {% include "Components/form/kanna.twig" with {'form': form} %}

            {# Company Name #}
            {% include "Components/form/company.twig" with {'form': form} %}

            {# Address #}
            {% include "Components/form/address.twig" with {'form': form} %}
            
            {# Phone #}
            {% include "Components/form/phone.twig" with {'form': form} %}

            {# Email #}
            {% include "Components/form/email.twig" with {'form': form} %}
            
            <div class="form-group row">
                <div class="col-sm-4"></div>
                <div class="col-md-4">
                    <button class="btn btn-primary btn-block" type="submit">{{ 'common.next'|trans }}</button>
                    <a class="btn btn-secondary btn-block" href="{{ url('cart') }}">{{ 'common.back'|trans }}</a>
                </div>
            </div>
        </form>
    </div>
</div>
{% endblock %}
