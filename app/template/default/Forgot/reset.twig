{% extends 'default_frame.twig' %}

{% form_theme form 'Form/form_div_layout.twig' %}

{% block main %}
    {% include "Components/heading.twig" with {'title': 'front.forgot.reset_title' } %}
    <div class="row">
        <div class="col-12">
            <div class="page-reset-password">
                <form id="form1" method="post" novalidate>
                    {{ form_widget(form._token) }}
                    {# Email #}
                    {% include "Components/form/input.twig" 
                        with {
                            'form': form, 
                            'field': 'login_email', 
                            'label': 'common.mail_address'
                        } 
                    %}

                    {% include "Components/form/password.twig" with { 'form': form} %}

                    <div class="row">
                        <div class="col-sm-4"></div>
                        <div class="col-sm-4">
                            <button class="btn btn-primary btn-block" type="submit">{{ 'common.registration'|trans }}</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

