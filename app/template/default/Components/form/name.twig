{% extends 'Components/form/base_input.twig' %}
{% set custom_class = customClass|default('form-group-name') %}

{% block formLabel %}
    {{ form_label(form.name, 'common.name', { 'label_attr': { 'class': ' col-form-label' }}) }}
{% endblock %}

{% block formContent %}
    <div class="row {{ has_errors(form.name.name01, form.name.name02) ? 'is-invalid'}}">
        <div class="col-6">
            {{ form_widget(form.name.name01, { 'attr': { 'placeholder': 'common.last_name', 'class': 'form-control' }}) }}
            {{ form_errors(form.name.name01) }}
        </div>
        <div class="col-6">
            {{ form_widget(form.name.name02, { 'attr': { 'placeholder': 'common.first_name', 'class': 'form-control' }}) }}
            {{ form_errors(form.name.name02) }}
        </div>
    </div>
{% endblock %}