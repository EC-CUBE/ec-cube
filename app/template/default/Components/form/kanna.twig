{% extends 'Components/form/base_input.twig' %}
{% set custom_class = customClass|default('') %}

{% block formLabel %}
    {{ form_label(form.kana, 'common.kana', { 'label_attr': { 'class': ' col-form-label' }}) }}
{% endblock %}

{% block formContent %}
    <div class="row {{ has_errors(form.kana.kana01, form.kana.kana02) ? 'is-invalid'}}">
        <div class="col-6">
            {{ form_widget(form.kana.kana01, { 'attr': { 'placeholder': 'common.last_name_kana', 'class': 'form-control' }}) }}
            {{ form_errors(form.kana.kana01) }}
        </div>
        <div class="col-6">
            {{ form_widget(form.kana.kana02, { 'attr': { 'placeholder': 'common.first_name_kana', 'class': 'form-control' }}) }}
            {{ form_errors(form.kana.kana02) }}
        </div>
    </div>
{% endblock %}