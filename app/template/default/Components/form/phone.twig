{% extends 'Components/form/base_input.twig' %}
{% set custom_class = customClass|default('') %}

{% block formLabel %}
    {{ form_label(form.phone_number, 'common.phone_number', { 'label_attr': { 'class': 'col-form-label' }}) }}
{% endblock %}
    
{% block formContent %}
    <div class="row {{ has_errors(form.phone_number) ? 'is-invalid'}}">
        <div class="col-12">
            {{ form_widget(form.phone_number, { 'attr': { 'class': 'form-control' }}) }}
            {{ form_errors(form.phone_number) }}
        </div>
    </div>
{% endblock %}