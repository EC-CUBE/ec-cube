            {% if BaseInfo.option_favorite_product == 1 %}
                <li><a href="{{ url('mypage_favorite') }}"><svg class="cb cb-heart-circle"><use xlink:href="#cb-heart-circle"></use></svg>お気に入り</a></li>
            {% endif %}
