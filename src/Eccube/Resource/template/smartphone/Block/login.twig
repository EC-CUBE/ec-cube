{% else %}
    <div id="member" class="member drawer_block pc">
        <ul class="member_link">
            <li>
                <a href="{{ url('entry') }}">
                    <svg class="cb cb-user-circle"><use xlink:href="#cb-user-circle" /></svg>新規会員登録
