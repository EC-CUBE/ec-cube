{% extends 'frame.twig' %}

{% set current = 4 %}

{% form_theme form 'layout.html.twig' %}

{% block main %}
    <div id="main" class="step5">
        <div class="main_inner">
            <div class="main_content">
                <div class="page-header">
                    <h1>{{ 'install.database_configuration'|trans }}</h1>
                </div>
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <form name="form1" id="form1" method="post" action="{{ path('install_step4') }}">
                                {{ form_widget(form._token) }}
                                {{ form_row(form.database) }}
                                {{ form_row(form.database_host) }}
                                {{ form_row(form.database_port) }}
                                {{ form_row(form.database_name) }}
                                {{ form_row(form.database_user) }}
                                {{ form_row(form.database_password) }}
                                <ul class="btn_area">
                                    <li class="d-grid gap-2"><button type="submit" class="btn btn-primary btn-block btn-lg">{{ 'install.next'|trans }}</button></li>
                                    <li class="d-grid gap-2"><a href="{{ path('install_step3') }}" class="btn btn-link btn-block btn-lg">{{ 'install.back'|trans }}</a></li>
                                </ul>
                            </form>
                        </div>
                        <!-- /.col -->
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
