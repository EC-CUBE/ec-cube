{% extends 'frame.twig' %}

{% block main %}
    <div id="undercolumn">
        <div id="undercolumn_error">
            <div class="message_area">
                <!--★エラーメッセージ-->
                <p class="error">{{ error }}</p>
            </div>

            <div class="btn_area">
                <ul>
                    <li>
                        {% if return_top is defined and return_top %}
                            <a href="{{ path('homepage') }}"><img class="hover_change_image" src="{{ app.config.tpl }}img/button/btn_toppage.jpg" alt="トップページへ" /></a>
                        {% else %}
                            <a href="javascript:history.back()"><img class="hover_change_image" src="{{ app.config.tpl }}img/button/btn_back.jpg" alt="戻る" /></a>
                        {% endif %}
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
