<!DOCTYPE html>
<html lang="{{ eccube_config.locale }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="{{ asset('img/common/favicon.ico', 'install') }}">
    <title>{{ 'install.title'|trans }}</title>
    <script src="{{ asset('install.bundle.js', 'bundle') }}"></script>
    <link href="{{ asset('assets/css/dashboard.css', 'install') }}" rel="stylesheet">
    <script src="{{ asset('assets/js/function.js', 'install') }}"></script>
</head>

<body>
<div id="wrapper">
    <!-- ▼ #header ▼ -->
    <header id="header" role="navigation">
        <div class="navbar">
            <div class="logo" href="./"><svg class="cb cb-logomark"><use xlink:href="#cb-logomark" /></svg><svg class="cb cb-logotext"><use xlink:href="#cb-logotext" /></svg></div>
        </div>
    </header>
    <!-- ▲ #header ▲ -->
    <div class="main_wrap">
        <!-- ▼ #side ▼ -->
        <aside id="side">
            <div class="step_nav">
                <ol>
                    <li{% if current >= 1 %} class="current"{% endif %}><span class="number">1</span>{{ 'install.welcom'|trans }}</li>
                    <li{% if current >= 2 %} class="current"{% endif %}><span class="number">2</span>{{ 'install.check_permission'|trans }}</li>
                    <li{% if current >= 3 %} class="current"{% endif %}><span class="number">3</span>{{ 'install.site_configuration'|trans }}</li>
                    <li{% if current >= 4 %} class="current"{% endif %}><span class="number">4</span>{{ 'install.database_configuration'|trans }}</li>
                    <li{% if current >= 5 %} class="current"{% endif %}><span class="number">5</span>{{ 'install.database_initalization'|trans }}</li>
                    <li{% if current >= 6 %} class="current"{% endif %}><span class="number">6</span>{{ 'install.install_completed'|trans }}</li>
                </ol>
            </div>
        </aside>
        <!-- ▲ #side ▲ -->
        <!-- ▼ #main ▼ -->
        {% block main %}{% endblock %}
        <!-- ▲ #main ▲ -->
    </div>

</div>
<script src="{{ asset('assets/js/function.js', 'install') }}"></script>
<script>
$(function() {
    /*
     * for svg icon
     */
    $.ajax({
        type: 'GET',
        url: "{{ asset('assets/img/svg.html', 'install') }}",
        dataType: 'html',
        success: function(data){
            $('body').prepend(data);
        },
        error: function() {
            console.log('error');
        }
    });
});
</script>
{% block script %}{% endblock %}
</body>
</html>
