                <input type="hidden" name="ids" value="{{ ids }}">

                <div class="card rounded border-0 mb-4">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-8"><span class="card-title">{{ 'admin.order.mail.360'|trans }}</span></div>
