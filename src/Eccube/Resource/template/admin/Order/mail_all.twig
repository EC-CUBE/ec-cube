                            </div>
                            <div class="row mb-2">
                                <div class="col-3"><span>{{ 'admin.order.mail.344'|trans }}</span><span class="badge badge-primary ml-1">{{ 'common.text.message.required'|trans }}</span></div>
                                <div class="col">
                                    {{ form_widget(form.mail_subject) }}
                                    {{ form_errors(form.mail_subject) }}
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-3"><span>{{ 'admin.order.mail.361'|trans }}</span><span class="badge badge-primary ml-1">{{ 'common.text.message.required'|trans }}</span></div>
                                <div class="col">
                                    {{ form_widget(form.mail_header, {'attr': {'rows': '7'}}) }}
                                    {{ form_errors(form.mail_header) }}
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-3"><span>{{ 'admin.order.mail.body'|trans }}</span></div>
                                <div class="col">
                                    {{ body|nl2br }}
