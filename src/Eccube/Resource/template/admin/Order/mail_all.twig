{% extends '@admin/styleguide_frame.twig' %}

{% set menus = ['order', 'order_master'] %}

{% block title %}{{'admin.order.mail_all.349'|trans}}{% endblock %}
{% block sub_title %}{{'admin.order.mail_all.350'|trans}}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block javascript %}
<script>
$(function() {
    $('#template-change').on('change', function() {
        $('#mode').val('change');
        $('#order-mail-form').submit();
        return false;
    });

    $('#mailConfirm').on('click', function (e) {
        e.preventDefault();
        $('#confirmModal').modal('show');
        return false;
    });

    $('#sendMail').on('click', function(e) {
        e.preventDefault();
        $('#mode').val('complete');
        $('#order-mail-form').submit();
        return false;
    });
});
</script>
{% endblock javascript %}

{% block main %}
<div class="c-contentsArea__cols">
