                                                        <div id="searchItemsResult"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        {# 明細行のエラー表示 #}
                                        {{ form_errors(form.OrderItemsError) }}

                                    </div>
                                </div>
                                <table id="addOrderItem" class="table table-striped table-sm mb-0">
                                    <thead class="table-active">
                                    <th class="pt-2 pb-2 pl-3">{{ 'admin.shipping.edit.product_name_and_code'|trans }}</th>
                                    <th class="pt-2 pb-2">{{ 'admin.shipping.edit.order_id'|trans }}</th>
                                    <th class="pt-2 pb-2">{{ 'admin.shipping.edit.price'|trans }}</th>
                                    <th class="pt-2 pb-2">{{ 'admin.shipping.edit.quantity'|trans }}</th>
                                    <th class="pt-2 pb-2">{{ 'admin.shipping.edit.tax_rate'|trans }}</th>
                                    <th class="pt-2 pb-2">{{ 'admin.shipping.edit.sub_total'|trans }}</th>
                                    <th class="pt-2 pb-2 pr-3"></th>
                                    </thead>
                                    <tbody>
                                    {% for OrderItem in Shipping.OrderItems %}
                                        {% include '@admin/Shipping/order_item_prototype.twig' with { 'OrderItem': OrderItem } %}
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-8">
                                    <div class="d-inline-block" data-toggle="tooltip" data-placement="top"
                                         title="Tooltip">
                                    <span class="card-title">{{ 'admin.shipping.edit.note_title'|trans }}<i
                                                class="fa fa-question-circle fa-lg ml-1"></i></span></div>
                                </div>
                                <div class="col-4 text-right"><a data-toggle="collapse" href="#freeArea"
                                                                 aria-expanded="false" aria-controls="freeArea"><i
                                                class="fa fa-angle-up fa-lg"></i></a></div>
                            </div>
                        </div>
                        <div class="collapse show ec-cardCollapse" id="freeArea">
                            <div class="card-body">
                                {{ form_widget(form.note, { attr: { rows: 8 }}) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem"><a class="c-beseLink"
                                                                        href="{{ url("admin_shipping") }}?resume=1"><i
                                        class="fa fa-backward" aria-hidden="true"></i><span>{{ 'admin.shipping.edit.shipping_mastar'|trans }}</span></a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button type="submit" class="btn btn-ec-conversion px-4" id="btn_save">
                                    {{ 'admin.shipping.edit.register_shipping'|trans }}
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
