                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="row mb-2 align-items-center">
                                            <div class="col-3"><span>出荷伝票番号</span></div>
                                            <div class="col">
                                                {{ form_widget(form.tracking_number, {'attr': {'placeholder': "1234-567890"}}) }}
                                                {{ form_errors(form.tracking_number) }}
                                            </div>
                                        </div>
                                        <div class="row mb-2 align-items-center">
                                            {# TODO 出荷状況はコンバージョンエリアで登録するので不要？ #}
                                            {#<div class="col-3"><span>出荷状況</span></div>#}
                                            {#<div class="col">#}
