                                        <div class="form-check form-check-inline">
                                            <label class="form-check-label">
                                                {{ form_widget(form.notify_email, {'label_attr': {'class': 'checkbox-inline'}}) }}
                                            </label>
                                        </div>
                                        {% if (Shipping.id) %}
                                        <div>
                                            <div class="d-inline-block" data-toggle="collapse" href="#viewEmail" aria-expanded="false" aria-controls="viewEmail">
                                                <a>
                                                    <i class="fa fa-plus-square-o font-weight-bold mr-1"></i>
                                                    <span class="font-weight-bold">{{ 'admin.shipping.index.814'|trans }}</span>
                                                </a>
                                            </div>
                                            <div class="collapse bg-light p-4 ec-collapse bg-ec-formGray" id="viewEmail" style="word-wrap: break-word; word-break:break-all" data-preview-url="{{ url('admin_shipping_preview_notify_mail', {id: Shipping.id}) }}">
                                                <pre></pre>
                                            </div>
                                        </div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-ec-sub" type="button" data-dismiss="modal">{{ 'admin.shipping.index.815'|trans }}</button>
                                    <button class="btn btn-ec-conversion" type="submit">{{ 'admin.shipping.index.816'|trans }}</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-8">
                                    <div class="d-inline-block" data-toggle="tooltip" data-placement="top"
                                         title="Tooltip">
                                        <span class="card-title">{{ 'admin.shipping.edit.description_title'|trans }}</span>
                                        <i class="fa fa-question-circle fa-lg ml-1" aria-hidden="true"></i>
                                    </div>
                                </div>
                                <div class="col-4 text-right"><a data-toggle="collapse" href="#shipmentOverview"
                                                                 aria-expanded="false" aria-controls="shipmentOverview"><i
                                                class="fa fa-angle-up fa-lg" aria-hidden="true"></i></a></div>
                            </div>
                        </div>
                        <div class="collapse show ec-cardCollapse" id="shipmentOverview">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-6">
                                        <div class="row mb-2 align-items-center">
                                            <div class="col-3"><span>{{ 'admin.shipping.edit.shipping_id'|trans }}</span></div>
                                            <div class="col">{{ Shipping.id ? Shipping.id }}</div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-3"><span>{{ 'admin.shipping.edit.shipping_address'|trans }}</span></div>
                                            <div class="col">
                                                <div id="shipping-addr-area" style="{{ Shipping.id ? 'display:none' }}">
                                                    {{ form_widget(form.name.name01) }}
                                                    {{ form_errors(form.name.name01) }}
                                                    {{ form_widget(form.name.name02) }}
                                                    {{ form_errors(form.name.name02) }}
                                                    {{ form_widget(form.kana.kana01) }}
                                                    {{ form_errors(form.kana.kana01) }}
                                                    {{ form_widget(form.kana.kana02) }}
                                                    {{ form_errors(form.kana.kana02) }}
                                                    {{ form_widget(form.company_name) }}
                                                    {{ form_errors(form.company_name) }}
                                                    {{ form_widget(form.postal_code) }}
                                                    {{ form_errors(form.postal_code) }}
                                                    {{ form_widget(form.address.pref) }}
                                                    {{ form_errors(form.address.pref) }}
                                                    {{ form_widget(form.address.addr01, {'attr':{'placeholder':'admin.shipping.edit.736'}}) }}
                                                    {{ form_errors(form.address.addr01) }}
                                                    {{ form_widget(form.address.addr02, {'attr':{'placeholder':'admin.shipping.edit.737'}}) }}
                                                    {{ form_errors(form.address.addr02) }}
                                                    {{ form_widget(form.phone_number) }}
                                                    {{ form_errors(form.phone_number) }}
                                                </div>
                                                {% if Shipping.id %}
                                                    <label>{{ Shipping.name01 }} {{ Shipping.name02 }}（{{ Shipping.kana01 }} {{ Shipping.kana02 }}）<br>
                                                        {{ 'admin.shipping.edit.postal_code'|trans({
                                                            '%postal_code%': Shipping.postal_code
                                                        }) }}<br>
                                                        {{ Shipping.pref ~ Shipping.addr01 ~ Shipping.addr02 }}<br><a
                                                                href="#" id="edit-shipping-addr"><i
                                                                    class="fa fa-pencil"
                                                                    aria-hidden="true">{{ 'admin.shipping.edit.edit_shipping_address'|trans }}</i></a></label>
                                                {% else %}

                                                    {# TODO お届け先入力のデザインを検討 #}
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="row mb-2">
                                            <div class="col-3"><span>{{ 'admin.shipping.edit.orderer'|trans }}</span></div>
                                            <div class="col">
                                                {% if Shipping.id and Shipping.Order %}
                                                    <label>{{ Shipping.Order.name01 }} {{ Shipping.Order.name02 }}
                                                        ({{ Shipping.Order.kana01 }} {{ Shipping.Order.kana02 }})
                                                        <br>{{ 'admin.shipping.edit.postal_code'|trans({
                                                            '%postal_code%': Shipping.Order.postal_code
                                                        }) }}
                                                        <br>{{ Shipping.Order.pref.name ~ Shipping.Order.addr01 ~ Shipping.Order.addr02 }}
                                                    </label>
                                                {% else %}
                                                    {# TODO 新規登録時の注文者情報をどう扱うか検討 #}
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="row mb-2 align-items-center">
                                            <div class="col-3"><span>{{ 'admin.shipping.edit.slip_number'|trans }}</span></div>
                                            <div class="col">
                                                {{ form_widget(form.tracking_number, {'attr': {'placeholder': 'admin.shipping.placeholder.tracking_number'}}) }}
                                                {{ form_errors(form.tracking_number) }}
                                            </div>
                                        </div>
                                        <div class="row mb-2 align-items-center">
                                            <div class="col-3"><span>{{ 'admin.shipping.edit.delivery_provider'|trans }}</span></div>
                                            <div class="col">
                                                {{ form_widget(form.Delivery) }}
                                                {{ form_errors(form.Delivery) }}
                                            </div>
                                            <div class="col-6"></div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="row mb-2 align-items-center">
                                            <div class="col-3"><i class="fa fa-calendar-check-o mr-1"
                                                                  aria-hidden="true"></i><span>{{ 'admin.shipping.edit.date_to_deliver'|trans }}</span></div>
                                            <div class="col">
                                                {{ form_widget(form.shipping_delivery_date) }}
                                                {{ form_errors(form.shipping_delivery_date) }}
                                            </div>
                                        </div>
                                        <div class="row mb-2 align-items-center">
                                            <div class="col-3"><i class="fa fa-clock-o mr-1"
                                                                  aria-hidden="true"></i><span>{{ 'admin.shipping.edit.specified_time_zone'|trans }}</span>
                                            </div>
                                            <div class="col">
                                                {{ form_widget(form.DeliveryTime) }}
                                                {{ form_errors(form.DeliveryTime) }}
                                            </div>
                                        </div>
                                        <div class="row mb-2 align-items-center">
                                            <div class="col-3"><i class="fa fa-truck mr-1"
                                                                  aria-hidden="true"></i><span>{{ 'admin.shipping.edit.ship_date'|trans }}</span></div>
                                            <div class="col">
                                                {{ form_widget(form.shipping_date) }}
                                                {{ form_errors(form.shipping_date) }}
                                            </div>
                                        </div>
                                        <div class="row mb-2 align-items-center">
                                            <div class="col-3"><i class="fa fa-refresh mr-1"
                                                                  aria-hidden="true"></i><span>{{ 'admin.shipping.edit.last_update_date'|trans }}</span>
                                            </div>
                                            <div class="col">
                                                <span>{{ Shipping.id ? Shipping.update_date|date_min }}</span></div>
                                        </div>
                                        <div class="row mb-2 align-items-center">
                                            <div class="col-3"><i class="fa fa-user mr-1"
                                                                  aria-hidden="true"></i><span>{{ 'admin.shipping.edit.last_modified_by'|trans }}</span></div>
                                            <div class="col"><span>{{ Shipping.id ? Shipping.creator }}</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-8">
                                    <div class="d-inline-block" data-toggle="tooltip" data-placement="top"
                                         title="Tooltip">
                                        <span class="card-title">{{ 'admin.shipping.edit.produtcs_title'|trans }}</span><i
                                                class="fa fa-question-circle fa-lg ml-1"
                                                aria-hidden="true"></i></div>
                                </div>
                                <div class="col-4 text-right"><a data-toggle="collapse" href="#shipmentItem"
                                                                 aria-expanded="false" aria-controls="shipmentItem"><i
                                                class="fa fa-angle-up fa-lg" aria-hidden="true"></i></a></div>
                            </div>
                        </div>
                        <div class="collapse show ec-cardCollapse" id="shipmentItem">
                            <div class="card-body">
