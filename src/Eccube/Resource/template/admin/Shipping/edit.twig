{% extends '@admin/styleguide_frame.twig' %}

{% set menus = ['shipping', 'shipping_edit'] %}

{% block title %}{{ 'admin.shipping.edit.718'|trans }}{% endblock %}
{% block sub_title %}{{ 'admin.shipping.edit.717'|trans }}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block javascript %}
    <script src="//yubinbango.github.io/yubinbango/yubinbango.js" charset="UTF-8"></script>

    <script>
        // 商品の追加モーダル#検索ボタン
        // 明細の一覧を取得し, モーダル内に描画する
        $('#addProduct').on('click', '#searchItemsButton', function () {
            $.ajax({
                type: 'POST',
                dataType: 'html',
                url: '{{ url('admin_shipping_search_product') }}',
            }).done(function (data) {
                // モーダルに結果を書き出し.
                $('#searchItemsResult').html(data);
            }).fail(function () {
                alert('failed.');
            });
        });
        // 商品の追加モーダル#ページャ部分
        // クリックしたページ番号の明細一覧を取得し, モーダル内に描画する
        $('#addProduct').on('click', '.page-link', function (event) {
            event.preventDefault();

            $.ajax({
                type: 'POST',
                dataType: 'html',
                url: event.target.href,
            }).done(function (data) {
                // モーダルに結果を書き出し.
                $('#searchItemsResult').html(data);
            }).fail(function () {
                alert('failed.');
            });
        });
        // 商品の追加モーダル#＋ボタン
        // クリックした明細IDを取得し, 親ウインドウに描画する
        $('#addProduct').on('click', '.append-order-item', function (event) {
            var target = event.target;
            // 明細IDを取得
            var id = target.getAttribute('data-order-item-id');
            // 自身の行を削除.
            $(event.target).parents('tr').remove();

            $.ajax({
                type: 'POST',
                dataType: 'html',
                // idで明細情報を取得
                url: '{{ url('admin_shipping_search_item') }}' + '?order-item-id=' + id,
            }).done(function (data) {
                // 親ウインドウに結果を書き出し.
                $("#addOrderItem > tbody").append(data);
            }).fail(function () {
                alert('failed.');
            });
        });
        // 明細行の削除
        $('#addOrderItem').on('click', '.remove-order-item', function (event) {
            event.preventDefault();

            // 自身の行を削除.
            $(event.target).parents('tr').remove();
        });

        // お届け先の編集
        // 入力フォームの開閉を行う.
        $('#edit-shipping-addr').on('click', function () {
            $('#shipping-addr-area').toggle();
        });
    </script>

{% endblock javascript %}

