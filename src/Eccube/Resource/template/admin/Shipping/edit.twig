                                                                        href="{{ url("admin_shipping") }}?resume=1"><i
                                        class="fa fa-backward" aria-hidden="true"></i><span>出荷マスター</span></a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                {{ form_widget(form.ShippingStatus) }}
                                {{ form_errors(form.ShippingStatus) }}
                            </div>
                            <div class="col-auto">
                                {# TODO (編集時)情報更新が行われたらモーダルを表示->モーダルからsubmitする #}
