                            </div>
                        </div>
                    </div>
                </div>
                <div class="card rounded border-0 mb-4">
                    {% if pagination.totalItemCount > 0 %}
                        <div class="card-body p-0">
                            <table class="table table-sm">
                                <thead>
                                <tr>
                                    <th class="border-top-0 pt-2 pb-2 pl-3">
                                        <input type="checkbox" id="check-all" name="filter" value="open">
                                    </th>
                                    <th class="border-top-0 pt-2 pb-2">{{'admin.shipping.index.791'|trans}}</th>
                                    <th class="border-top-0 pt-2 pb-2">{{'admin.shipping.index.792'|trans}}</th>
                                    <th class="border-top-0 pt-2 pb-2">{{'admin.shipping.index.801'|trans}}</th>
                                    <th class="border-top-0 pt-2 pb-2">{{'admin.shipping.index.800'|trans}}</th>
                                    <th class="border-top-0 pt-2 pb-2">{{'admin.shipping.index.802'|trans}}</th>
                                    <th class="border-top-0 pt-2 pb-2">{{'admin.shipping.index.796'|trans}}</th>
                                    <th class="border-top-0 pt-2 pb-2">&nbsp;</th>
                                    <th class="border-top-0 pt-2 pb-2 pr-3">&nbsp;</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for Shipping in pagination %}
                                <tr>
                                    <td class="align-middle pl-3">
                                        <input type="checkbox" id="check-{{ Shipping.id }}" data-id="{{ Shipping.id }}" name="ids{{ Shipping.id }}">
                                    </td>
                                    <td class="align-middle"><a href="{{ url('admin_shipping_edit', { id : Shipping.id }) }}">{{ Shipping.id }}</a></td>
                                    <td class="align-middle">{{ Shipping.TrackingNumber|default('admin.shipping.index.798'|trans) }}</td>
                                    <td class="align-middle">
                                        {% for Order in Shipping.Orders %}
                                            {# TODO 受注ステータスごとの色 #}
                                            <div class="d-block"><a href="{{ url('admin_order_edit', { id : Order.id }) }}">{{ Order.id }}</a><span class="badge badge-ec-blue ml-2 mb-2">{{ Order.OrderStatus }}</span></div>
                                        {% endfor %}
                                    </td>
                                    <td class="align-middle">
                                        <label class="m-0">{{ Shipping.zip01 }}-{{ Shipping.zip02 }}<br>{{ Shipping.pref }}{{ Shipping.addr01 }}{{ Shipping.addr02 }}<br>{{ Shipping.name01 }} {{ Shipping.name02 }}<br>{{ Shipping.tel01 }}-{{ Shipping.tel02 }}-{{ Shipping.tel03 }}</label>
                                    </td>
                                    <td class="align-middle">{{ Shipping.ShippingDeliveryName }}</td>
                                    <td class="align-middle">
                                        {% if Shipping.ShippingDeliveryDate %}
                                        <i class="fa fa-check fa-lg text-success mr-1" aria-hidden="true"></i>{{ Shipping.ShippingDeliveryDate|date_format }}
