                                            {{ form_widget(searchForm.buy_product_name) }}
                                        </div>
                                    </div>
                                    <div class="extra-form col-md-12">
                                        {% for f in searchForm.getIterator %}
                                            {% if f.vars.name matches '[^plg*]' %}
