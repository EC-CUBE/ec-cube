                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-ec-sub" type="button" data-dismiss="modal">{{ 'admin.shipping.index.815'|trans }}</button>
                                        <button class="btn btn-ec-conversion" type="button" data-dismiss="modal">{{ 'admin.shipping.index.816'|trans }}</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {# TODO 一括削除 #}
                        <button class="btn btn-ec-delete">{{ 'admin.shipping.index.817'|trans }}</button>
                    </div>
                    <div class="col-5 text-right">
                        <div class="d-inline-block mr-2">
                            <form>
                                <select class="custom-select">
                                    {# TODO リンクからセレクトボックスに変更されているので実装必要 #}
