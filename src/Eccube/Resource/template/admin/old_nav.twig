{% for key1, level1 in eccube_config.eccube_nav if app.request.baseUrl ~ '/' ~ eccube_config.eccube_admin_route ~ '/' ~ key1 not in AuthorityRoles %}
    <li class="{% if active_menus(menus)[0] == key1 %}active{% endif %}">
        {% if level1.has_children is defined and level1.children|length > 0 %}
            <a class="toggle">
                <svg class="cb {{ level1.icon }}"> <use xlink:href="#{{ level1.icon }}" /></svg>
                {{ level1.name|trans }}
                <svg class="cb cb-angle-down"> <use xlink:href="#cb-angle-down" /></svg>
            </a>
            <ul {% if active_menus(menus)[0] == key1 %}class="active" style="display: block;"{% endif %}>
                {% for key2, level2 in level1.children if app.request.baseUrl ~ '/' ~ eccube_config.eccube_admin_route ~ '/' ~ key1 ~ '/' ~ key2 not in AuthorityRoles %}
                    {% if level2.url is defined and path(level2.url)  in AuthorityRoles %}
                    {% else %}
                    <li class="{% if active_menus(menus)[1] == key2 %}active{% endif %}">
                        {% if level2.has_children is defined and level2.children|length > 0 %}
                            <a class="toggle">
                                {{ level2.name|trans }}
                                <svg class="cb cb-angle-down"> <use xlink:href="#cb-angle-down" /></svg>
                            </a>
                            <ul {% if active_menus(menus)[1] == key2 %}class="active" style="display: block;"{% endif %}>
                                {% for key3, level3 in level2.children %}
                                    {% if level3.url is defined and path(level3.url)  in AuthorityRoles %}
                                    {% else %}
                                    <li class="{% if active_menus(menus)[2] == ke3 %}active{% endif %}">
                                        <a href="{{ url(level3.url) }}">
                                            {{ level3.name|trans }}
                                        </a>
                                    </li>
                                    {% endif %}
                                {% endfor %}
                            </ul>
                        {% else %}
                            <a href="{{ url(level2.url) }}">
                                {{ level2.name|trans }}
                            </a>
                        {% endif %}
                    </li>
                   {% endif %}
                {% endfor %}
            </ul>
        {% else %}
            {% if level1.url is defined %}
                <a href="{{ url(level1.url) }}">
                    {{ level1.name|trans }}
                </a>
            {% else %}
                {{ level1.name|trans }}
            {% endif %}
        {% endif %}
    </li>
{% endfor %}
