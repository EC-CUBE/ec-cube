                            <label>購入金額</label>
                            <div class="form-row align-items-center">
                                <div class="col">
                                    {{ form_widget(searchForm.buy_total_start) }}
                                </div>
                                <div class="col-auto"><span>〜</span></div>
                                <div class="col">
                                    {{ form_widget(searchForm.buy_total_end) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col">
                        <div id="search_box_main__birth_month" class="form-group">
                            <label>誕生月</label>
                            <div class="row">
                                <div class="col-5">
                                    {{ form_widget(searchForm.birth_month) }}
                                </div>
                                <div class="col-7"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div id="search_box_main__buy_times" class="form-group">
                            <label>購入回数</label>
                            <div class="form-row align-items-center">
                                <div class="col">
                                    {{ form_widget(searchForm.buy_times_start) }}
                                </div>
                                <div class="col-auto"><span>〜</span></div>
                                <div class="col">
                                    {{ form_widget(searchForm.buy_times_end) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col">
                        <div id="search_box_main__birth" class="form-group">
                            <label>誕生日</label>
                            <div class="form-row align-items-center">
                                <div class="col">
                                    {{ form_widget(searchForm.birth_start, {'attr': {'class': 'input_cal'}}) }}
                                </div>
                                <div class="col-auto text-center"><span>〜</span></div>
                                <div class="col">
                                    {{ form_widget(searchForm.birth_end, {'attr': {'class': 'input_cal'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div id="search_box_main__crate_date" class="form-group">
                            <label>登録日</label>
                            <div class="form-row align-items-center">
                                <div class="col">
                                    {{ form_widget(searchForm.create_date_start, {'attr': {'class': 'input_cal'}}) }}
                                </div>
                                <div class="col-auto text-center"><span>〜</span></div>
                                <div class="col">
                                    {{ form_widget(searchForm.create_date_end, {'attr': {'class': 'input_cal'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col">
                        <div id="search_box_main__pref" class="form-group">
                            <label>都道府県</label>
                            <div class="row">
                                <div class="col-5">
                                    {{ form_widget(searchForm.pref) }}
                                </div>
                                <div class="col-7"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div id="search_box_main__update_date" class="form-group">
                            <label>更新日</label>
                            <div class="form-row align-items-center">
                                <div class="col">
                                    {{ form_widget(searchForm.update_date_start, {'attr': {'class': 'input_cal'}}) }}
                                </div>
                                <div class="col-auto text-center"><span>〜</span></div>
                                <div class="col">
                                    {{ form_widget(searchForm.update_date_end, {'attr': {'class': 'input_cal'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col">
                        <div id="search_box_main__tel" class="form-group">
                            <label>電話番号</label>
                            {{ form_widget(searchForm.tel) }}
                            {{ form_errors(searchForm.tel) }}
                        </div>
                    </div>
                    <div class="col">
                        <div id="search_box_main__last_buy" class="form-group">
                            <label>最終購入日</label>
                            <div class="form-row align-items-center">
                                <div class="col">
                                    {{ form_widget(searchForm.last_buy_start, {'attr': {'class': 'input_cal'}}) }}
                                </div>
                                <div class="col-auto text-center"><span>〜</span></div>
                                <div class="col">
                                    {{ form_widget(searchForm.last_buy_end, {'attr': {'class': 'input_cal'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-4">
                    {% for f in searchForm.getIterator %}
                        {% if f.vars.name matches '[^plg*]' %}
                            <div class="col">
                                <div class="form-group">
                                    {{ form_label(f) }}
                                    {{ form_widget(f) }}
                                    {{ form_errors(f) }}
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
                <div id="search_box_main__clear" class="d-block text-center">
                    <button class="btn btn-light border border-dark search-clear" type="button">検索条件クリア</button>
                </div>
            </div>
            <div id="search_box_footer" class="c-outsideBlock__contents mb-5">
                <button type="submit" class="btn btn-primary px-5" type="button">検索</button>
            </div>
        </div>
