{% extends '@admin/default_frame.twig' %}

{% set menus = ['setting', 'system', 'masterdata'] %}

{% block title %}{{'admin.setting.system.masterdata.676'|trans}}{% endblock %}
{% block sub_title %}{{'admin.setting.system.masterdata.675'|trans}}{% endblock %}

{% block main %}
    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                <form id="form1" name="form1" method="post" action="{{ url('admin_setting_system_masterdata') }}">
                    {{ form_widget(form._token) }}
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header"><span>{{ 'admin.setting.system.masterdata.677'|trans }}</span></div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-3" id="master_edit_box__masterdata">
                                    {{ form_widget(form.masterdata, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.masterdata) }}
                                </div>
                                <div class="col mb-2" id="master_edit_box__confirm_button">
                                    <button class="btn btn-primary" type="submit">{{'admin.setting.system.masterdata.678'|trans}}</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

                {% if form2.data is not empty %}
                    <form id="form2" name="form2" method="post" action="{{ url('admin_setting_system_masterdata_edit') }}">
                        {{ form_widget(form2.masterdata_name) }}
                        {{ form_widget(form2._token) }}
                        <div class="card rounded border-0 mb-4">
                            <div class="card-header">
                                <div class="read">
                                    {{'admin.setting.system.masterdata.679'|trans}}<br />
                                    {{'admin.setting.system.masterdata.680'|trans}}<br />
                                    {{'admin.setting.system.masterdata.681'|trans}}<br />
                                    {{'admin.setting.system.masterdata.682'|trans}}
                                </div>
                            </div>
                            <div class="card-body">
                                <table class="table table-sm" id="result_list__list">
                                    <thead>
                                        <tr>
                                            <th class="border-top-0 pt-2 pb-2 text-center" id="result_list__header_id" style="width: 20%">
                                                {{ 'admin.setting.system.masterdata.th_id'|trans }}
                                            </th>
                                            <th class="border-top-0 pt-2 pb-2 text-center" id="result_list__header_name">
                                                {{ 'admin.setting.system.masterdata.th_name'|trans }}
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for data in form2.data %}
                                            <tr id="result_list__item--{{ data.vars.name }}">
                                                <td id="result_list__id--{{ data.vars.name }}" class="align-middle text-center pl-3">
                                                    {{form_widget(data.id)}}
                                                    {{form_errors(data.id)}}
                                                </td>
                                                <td id="result_list__name--{{ data.vars.name }}" class="align-middle text-center">
                                                    {{form_widget(data.name)}}
                                                    {{form_errors(data.name)}}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="c-conversionArea">
                            <div class="c-conversionArea__container">
                                <div class="row justify-content-between align-items-center">
                                    <div class="col-6">
                                        <div class="c-conversionArea__leftBlockItem">
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="row align-items-center justify-content-end">
                                            <div class="col-auto">
                                                <button class="btn btn-ec-conversion px-5" type="submit">{{ 'admin.setting.system.masterdata.683'|trans }}</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
