{% extends 'main_frame.twig' %}

{% block title %}基本情報設定{% endblock %}
{% block sub_title %}SHOPマスター{% endblock %}

{% form_theme form 'Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block main %}

    <div class="row">
        <div class="col-md-12">
            <form name="form1" role="form" class="form-horizontal" id="point_form" method="post" action="">
            {{ form_widget(form._token) }}

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">基本情報編集</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">

                        {{ form_row(form.company_name) }}
                        {{ form_row(form.company_kana) }}
                        {{ form_row(form.shop_name) }}
                        {{ form_row(form.shop_kana) }}
                        {{ form_row(form.shop_name_eng) }}
                        {{ form_row(form.zip) }}
                        {{ form_row(form.address) }}
                        {{ form_row(form.tel) }}
                        {{ form_row(form.fax) }}
                        {{ form_row(form.business_hour) }}
                        {{ form_row(form.email01) }}
                        {{ form_row(form.email02) }}
                        {{ form_row(form.email03) }}
                        {{ form_row(form.email04) }}
                        {{ form_row(form.good_traded) }}
                        {{ form_row(form.message) }}

                    </div><!-- /.box-body -->
                </div><!-- /.box -->

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">送料設定</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">

                        {{ form_row(form.free_rule) }}
                        {{ form_row(form.deliv_free_amount) }}
                        {{ form_row(form.option_product_deliv_fee) }}
                        {{ form_row(form.option_deliv_fee) }}
                        {{ form_row(form.use_multiple_shipping) }}

                    </div><!-- /.box-body -->
                </div><!-- /.box -->

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">会員設定</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">

                        {{ form_row(form.forgot_mail) }}
                        {{ form_row(form.mypage_order_status_disp_flg) }}
                        {{ form_row(form.option_favorite_product) }}

                    </div><!-- /.box-body -->
                </div><!-- /.box -->

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">商品設定</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">

                        {{ form_row(form.nostock_hidden) }}
                        {{ form_row(form.downloadable_days) }}
                        {{ form_row(form.downloadable_days_unlimited) }}

                    </div><!-- /.box-body -->
                </div><!-- /.box -->

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">地図設定</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body">

                        {{ form_row(form.latitude) }}
                        {{ form_row(form.longitude) }}

                    </div><!-- /.box-body -->
                </div><!-- /.box -->

                <div class="row">
                    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 text-center btn_area">
                        <button class="btn btn-primary btn-block btn-lg" onclick="document.form1.submit();">商品を登録</button>
                    </div>
                </div>

            </form>
        </div>
    </div>

{% endblock %}