                                    {{ form_widget(form.csv_type, {'id': 'csv-type'}) }}
                                </div>
                                <div class="col"></div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-4">
                                    <div class="mb-3">
                                        <label for="FormControlSelect1">{{ 'admin.setting.shop.csv.non_output_colmuns'|trans }}</label>
