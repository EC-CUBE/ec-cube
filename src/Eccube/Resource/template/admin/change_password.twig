{% extends '@admin/default_frame.twig' %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block title %}{{ 'admin.change_password.2'|trans }}{% endblock %}
{# TODO: update subtile text #}
{% block sub_title %}{% endblock %}

{% block main %}
    <form role="form" class="form-horizontal" name="form1" id="form1" method="post" action=""
          enctype="multipart/form-data">
        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <h4 class="box-title font-weight-bold">{{ 'admin.change_password.3'|trans }}</h4>
                        </div>

                        <div class="card-body">
                            {{ form_row(form._token) }}
                            {{ form_row(form.current_password, {type: 'password', value: '' }) }}
                            {{ form_row(form.change_password.first, {type: 'password', value: '' }) }}
                            {{ form_row(form.change_password.second, {type: 'password', value: '' }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            &nbsp;
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-primary btn-block btn-lg">{{ 'admin.change_password.4'|trans }}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
