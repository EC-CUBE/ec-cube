{% extends 'default_frame.twig' %}

{% set menus = ['store', 'plugin', 'plugin_search'] %}

{% block title %}オーナーズストア{% endblock %}
{% block sub_title %}
    {% if is_update %}
        プラグインアップデート
    {% else %}
        プラグインインストール
    {% endif %}
{% endblock %}

{% block javascript %}
    <script src="{{ asset('assets/js/vendor/masonry.pkgd.min.js', 'admin') }}"></script>
    <script>
        $(function() {
            $('.grid').masonry({
                itemSelector: '.grid-item',
                columnWidth: '.grid-item'
            });
        });
    </script>
{% endblock javascript %}

{% block main %}
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">
                        {% if is_update %}
                            以下のプラグインをアップデートします。
                        {% else %}
                            以下のプラグインをインストールします。
                        {% endif %}
                    </h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="plugin-block">
                                <div class="row grid">
                                    <div class="col-xs-12 grid-item">
                                        {{ include('Store/plugin_confirm_panel.twig') }}
                                    </div>
                                </div><!-- .row -->
                            </div><!-- .plugin-block -->
                        </div><!-- .col-xs-12 -->
                    </div><!-- .row -->
                </div><!-- /.box-body 1 -->

                    {% if dependents is not empty %}
            </div> <!-- end box 1 -->

            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">
                        {% if is_update %}
                            {{ item.name }}をアップデートするために、以下のプラグインもアップデートします。
                        {% else %}
                            {{ item.name }}をインストールするために、以下のプラグインもインストールします。
                        {% endif %}
                    </h3>
                </div><!-- /.box-header -->
                <div class="row">
                    <div class="col-xs-12">
                        <div class="plugin-block">
                            <div class="row grid">
                                {% for plugin in dependents %}
                                <div class="col-xs-12 grid-item">
                                    {% include 'Store/plugin_confirm_panel.twig' with {'item': plugin, 'is_update': is_update} only %}
                                </div>
                                {% endfor %}
                            </div><!-- .row -->
                        </div><!-- .plugin-block -->
                    </div><!-- .col-xs-12 -->
                </div><!-- .row -->
                    {% endif %}
                <div class="box-footer">
                    <div class="row">
                        <div class="col-xs-12">
                            <span class="pull-right">
                                {% if is_update %}
                                    <a class="btn btn-warning btn-xs prevention-mask" href="{{ url('admin_store_plugin_upgrade', {'action': 'update', 'id':  item.product_id, 'version': item.version}) }}">アップデート</a>
                                {% else %}
                                    <a class="btn btn-warning btn-xs prevention-mask" href="{{ url('admin_store_plugin_api_install', {'pluginCode': item.product_code, 'eccubeVersion': constant('Eccube\\Common\\Constant::VERSION'), 'version': item.version}) }}">インストール</a>
                                {% endif %}
                                <button class="btn btn-cancel btn-xs" type="button" onclick="return window.history.back()">戻る</button>
                            </span>
                        </div>
                    </div>
                </div><!-- /.box-footer -->

            </div><!-- /.box 1 & 2-->

        </div><!-- /.col -->
    </div>
{% endblock %}
