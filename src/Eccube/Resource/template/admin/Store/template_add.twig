{% extends '@admin/default_frame.twig' %}

{% set menus = ['store', 'template', 'template_install'] %}

{% block title %}{{'admin.store.template_add.934'|trans}}{% endblock %}
{% block sub_title %}{{'admin.store.template_add.935'|trans}}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_3_horizontal_layout.html.twig' %}

{% block main %}
    <div class="row" id="aside_wrap">
        <form role="form" class="form-horizontal" name="form1" id="form1" method="post" action="{{ url('admin_store_template_install') }}" enctype="multipart/form-data">
        {{ form_widget(form._token) }}
        <div class="col-md-9">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">{{'admin.store.template_add.936'|trans}}</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="form-group">
                        <label class="col-sm-4 control-label">{{'admin.store.template_add.937'|trans}}</label>
                        <div class="col-sm-8">
                            {{ form_widget(form.code) }}
                            {{ form_errors(form.code) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label">{{'admin.store.template_add.938'|trans}}</label>
                        <div class="col-sm-8">
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label">{{'admin.store.template_add.939'|trans}}<br>File format: zip,tar,tar.gz</label>
                        <div class="col-sm-8">
                            {{ form_widget(form.file, {'attr': {'accept': 'application/zip,application/x-tar,application/x-gzip'}}) }}
                            {{ form_errors(form.file) }}
                        </div>
                    </div>

                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div><!-- /.col -->
        <div class="col-md-3" id="aside_column">
            <div id="common_box" class="col_inner">
                <div class="box no-header">
                    <div class="box-body">
                        <div class="row text-center">
                            <div class="col-sm-6 col-sm-offset-3 col-md-12 col-md-offset-0">
                                <button class="btn btn-primary btn-block btn-lg" type="submit">{{'admin.store.template_add.940'|trans}}</button>
                            </div>
                        </div>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div>
        </div><!-- /.col -->

        </form>
    </div>

{% endblock %}
