                                                                            <th class="pt-2 pb-2">{{ 'admin.product.index.standart.modal.col4'|trans }}</th>
                                                                            <th class="pt-2 pb-2 pr-2">{{ 'admin.product.index.standart.modal.col5'|trans }}</th>
                                                                        </tr>
