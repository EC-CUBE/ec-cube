{% extends '@admin/styleguide_frame.twig' %}

{% set menus = ['product', 'class_category'] %}

{% block title %}{{ 'admin.product.category.399'|trans }}{% endblock %}
{% block sub_title %}{{ 'admin.product.category.400'|trans }}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block javascript %}
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.core.min.js', 'admin') }}"></script>
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.widget.min.js', 'admin') }}"></script>
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.mouse.min.js', 'admin') }}"></script>
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.sortable.min.js', 'admin') }}"></script>
    <script>
        $(function () {
            var oldSortNos = [];
            // 画面の中のsortNo一覧を保持
            $(".list-group-item").each(function () {
                oldSortNos.push(this.dataset.sortNo);
            });
            // rsort
            oldSortNos.sort(function (a, b) {
                return a - b;
            }).reverse();

            $(".list-group").sortable({
                items: '> .list-group-item',
                cursor: 'move',
                update: function (e, ui) {
                    $("body").append($('<div class="modal-backdrop show"></div>'));
                    updateSortNo();
                }
            });

            var updateSortNo = function () {
                // 並び替え後にsortNoを更新
                var newSortNos = {};
                var i = 0;
                $("list-group-item").each(function () {
                    newSortNos[this.dataset.categoryId] = oldSortNos[i];
                    i++;
                });

                $.ajax({
                    url: '{{ url('admin_product_category_sort_no_move') }}',
                    type: 'POST',
                    data: newSortNos,
                }).done(function (data) {
                    console.log(data);
                    $(".modal-backdrop").remove();
                }).fail(function () {
                    console.log('fail');
                    $(".modal-backdrop").remove();
                });
            };
        });
    </script>
{% endblock %}

{% block main %}
    <div class="c-outsideBlock">
        <div class="c-outsideBlock__contents mb-2">
            <div class="row">
                <div class="col-6">
                    <nav aria-label="breadcrumb" role="navigation">
                        <ol class="breadcrumb mb-2 p-0">
                            <li class="breadcrumb-item">
                                <a href="{{ url('admin_product_category') }}">
                                    {{ 'admin.product.category.401'|trans }}
                                </a>
                            </li>
                            {% for ParentCategory in TargetCategory.path %}
                                {% if ParentCategory.id is not null %}
                                    <li class="breadcrumb-item active" aria-current="page">
                                        <a href="{{ url('admin_product_category_show', { parent_id : ParentCategory.id }) }}">
                                            {{ ParentCategory.name }}
                                        </a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ol>
                    </nav>
                </div>
                <div class="col-6 text-right">
                    <div class="btn-group" role="group">
                        <button class="btn btn-ec-regular" type="button"
                                onclick="location.href='{{ url('admin_product_category_export') }}'">
                            <i class="fa fa-cloud-download mr-1 text-secondary"></i>
                            <span>{{ 'admin.product.category.405'|trans }}</span>
                        </button>
                        <button class="btn btn-ec-regular" type="button"
                                onclick="location.href='{{ url('admin_setting_shop_csv', { id : constant('\\Eccube\\Entity\\Master\\CsvType::CSV_TYPE_CATEGORY') }) }}'">
                            <i class="fa fa-cog mr-1 text-secondary"></i>
                            <span>{{ 'admin.product.index.486'|trans }}</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                <div class="card rounded border-0 mb-4">
                    <div class="card-body p-0">
                        <div class="card rounded border-0 mb-2">
                            <li class="list-group-item">
                                <form role="form" class="form-row" name="form1" id="form1" method="post"
                                      action="{% if TargetCategory.id %}{{ path('admin_product_category_edit', {id: TargetCategory.id}) }}{% elseif Parent %}{{ url('admin_product_category_show', {'parent_id': Parent.id}) }}{% else %}{{ url('admin_product_category') }}{% endif %}"
                                      enctype="multipart/form-data">
                                    {% if TargetCategory.hierarchy < eccube_config.eccube_category_nest_level %}
                                        {{ form_widget(form._token) }}
                                        <div class="col-auto">
                                            {{ form_widget(form.name) }}
                                            {{ form_errors(form.name) }}
                                        </div>
                                        <div class="col-auto">
                                            <button class="btn btn-ec-regular" type="submit">
                                                {{ 'admin.product.category.403'|trans }}
                                            </button>
                                        </div>
                                    {% endif %}
                                    {% for f in form.getIterator %}
                                        {% if f.vars.name matches '[^plg*]' %}
                                            <div class="col-auto">
                                                {{ form_label(f) }}
                                                {{ form_widget(f) }}
                                                {{ form_errors(f) }}
                                            </div>
                                        {% endif %}
                                    {% endfor %}
                                </form>
                            </li>
                            <ul class="list-group list-group-flush">
                                {% if Categories|length > 0 %}
                                    {% for Category in Categories %}
                                        <li class="list-group-item">
                                            {% if Category.id != TargetCategory.id %}
                                                <div class="row justify-content-around">
                                                    <div class="col-auto d-flex align-items-center">
                                                        <i class="fa fa-bars text-ec-gray"></i>
                                                    </div>
                                                    <div class="col d-flex align-items-center">
                                                        <a href="{{ url('admin_product_category_show',  { parent_id : Category.id }) }}">{{ Category.name }}</a>
                                                    </div>
                                                    <div class="col-auto text-right">
                                                        {# TODO: 「上へ移動」「下へ移動」のボタンの動作の実装 #}
                                                        <a class="btn btn-ec-actionIcon mr-3" href=""
                                                           data-tooltip="tooltip" data-placement="top"
                                                           title="{{ 'admin.product.category.up'|trans }}">
                                                            <i class="fa fa-arrow-up fa-lg text-secondary"></i>
                                                        </a>
                                                        <a class="btn btn-ec-actionIcon mr-3" href=""
                                                           data-tooltip="tooltip" data-placement="top"
                                                           title="{{ 'admin.product.category.down'|trans }}">
                                                            <i class="fa fa-arrow-down fa-lg text-secondary"></i>
                                                        </a>
                                                        <a class="btn btn-ec-actionIcon mr-3"
                                                           href="{{ url('admin_product_category_edit', {id: Category.id}) }}"
                                                           data-tooltip="tooltip" data-placement="top"
                                                           title="{{ 'admin.product.category.rename'|trans }}">
                                                            <i class="fa fa-pencil fa-lg text-secondary"></i>
                                                        </a>
                                                        {% if Category.Children|length > 0 or Category.hasProductCategories %}
                                                            {# TODO: 削除できない場合のxアイコンの表現をわかりやすくする #}
                                                            <a class="btn btn-ec-actionIcon mr-3"
                                                               data-tooltip="tooltip" data-placement="top"
                                                               title="{{ 'admin.product.category.text01'|trans }}">
                                                                <i class="fa fa-close fa-lg text-secondary"></i>
                                                            </a>
                                                        {% else %}
                                                            <a class="btn btn-ec-actionIcon mr-3"
                                                               href="{{ url('admin_product_category_delete', {id: Category.id}) }}"
                                                               data-tooltip="tooltip" data-placement="top"
                                                               title="{{ 'admin.product.category.410'|trans }}" {{ csrf_token_for_anchor() }}
                                                               data-method="delete">
                                                                <i class="fa fa-close fa-lg text-secondary"></i>
                                                            </a>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            {% else %}
                                                {# TODO: 新編集UIの実装 #}
                                                <form class="form-row">
                                                    <div class="col-auto d-flex align-items-center">
                                                        <input class="form-control" type="text">
                                                    </div>
                                                    <div class="col-auto d-flex align-items-center">
                                                        <button class="btn btn-ec-conversion" type="submit">決定
                                                        </button>
                                                    </div>
                                                    <div class="col-auto d-flex align-items-center">
                                                        <button class="btn btn-ec-sub" type="submit">キャンセル
                                                        </button>
                                                    </div>
                                                </form>
                                            {% endif %}
                                        </li>
                                    {% endfor %}
                                {% else %}
                                    {# TODO: データがない場合のデザイン #}
                                    <p>{{ 'admin.product.category.message.no_result'|trans }}</p>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
                <p>{{ 'admin.product.category.text02'|trans }}</p>
            </div>
        </div>

        {# TODO: 選択中の項目をわかるように表示 #}
        {% macro tree(Category, TargetId, level) %}
            {% import _self as selfMacro %}
            {% set level = level + 1 %}
            <li>
                <label {% if Category.children|length > 0 %}class="collapsed" {% endif %}data-toggle="collapse"
                       href="#directory_category{{ Category.id }}" aria-expanded="false"
                       aria-controls="directory_category{{ Category.id }}"><span><a
                                href="{{ url('admin_product_category_show', { parent_id : Category.id }) }}">{{ Category.name }}
                            ({{ Category.children|length }})</a></span></label>
                {% if Category.children|length > 0 %}
                    <ul class="collapse" id="directory_category{{ Category.id }}">
                        {% for ChildCategory in Category.children %}
                            {{ selfMacro.tree(ChildCategory, TargetId, level) }}
                        {% endfor %}
                    </ul>
                {% endif %}
            </li>
        {% endmacro %}

        <div class="c-contentsArea__secondaryCol">
            <div class="c-secondaryCol">
                <div class="card rounded border-0 mb-4">
                    <div class="card-header">
                        <span class="card-title"><a
                                    href="{{ url('admin_product_category') }}">{{ 'admin.product.category.401'|trans }}</a></span>
                    </div>
                    <div class="card-body">
                        <div class="c-directoryTree mb-3">
                            {% import _self as renderMacro %}
                            {% for TopCategory in TopCategories %}
                                <ul>
                                    {{ renderMacro.tree(TopCategory, TargetCategory.Parent.id | default(null), 0) }}
                                </ul>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
