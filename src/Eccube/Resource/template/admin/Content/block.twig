{% extends '@admin/default_frame.twig' %}

{% set menus = ['content', 'block'] %}

{% block title %}{{ 'admin.content.block.6'|trans }}{% endblock %}
{% block sub_title %}{{ 'admin.content.block.5'|trans }}{% endblock %}

{% block stylesheet %}
    {# TODO:
    - Fix to display popup confirmation block delete.
    - Move to css file or unset z-index = 1 for css .list-group-item
    #}
    <style type="text/css">
        li.list-group-item {
            z-index: inherit !important;
        }
    </style>
{% endblock %}

{% block main %}
    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                <div class="card rounded border-0 mb-4">
                    <div class="card-body p-0">
                        <div class="card rounded border-0 mb-2">
                            <ul class="list-group list-group-flush">
                                {% for Block in Blocks %}
                                    <li class="list-group-item">
                                        <div class="row">
                                            <div class="col-7 col-md-10 d-flex align-items-center">
                                                <a href="{{ url('admin_content_block_edit', {id: Block.id}) }}">
                                                    {{ Block.name }}
                                                </a>
                                            </div>
                                            <div class="col-5 col-md-2">
                                                <div class="row">
                                                    <div class="col-6 text-right">
                                                        <a href="{{ url('admin_content_block_edit', {id: Block.id}) }}"
                                                           class="btn btn-ec-actionIcon mr-3" data-toggle="tooltip"
                                                           data-placement="top"
                                                           title="{{ 'admin.content.block_edit.14'|trans }}">
                                                            <i class="fa fa-pencil fa-lg text-secondary"></i>
                                                        </a>
                                                    </div>
                                                    {% if Block.deletable %}
                                                        <div class="col-6">
                                                            <a href="#"
                                                               data-toggle="modal"
                                                               data-target="#confirmModal-{{ Block.id }}"
                                                               class="btn btn-ec-actionIcon mr-3" data-toggle="tooltip"
                                                               data-placement="top"
                                                               title="{{ 'admin.content.block_edit.17'|trans }}">
                                                                <i class="fa fa-close fa-lg text-secondary"></i>
                                                            </a>
                                                        </div>

                                                        <div class="modal fade" id="confirmModal-{{ Block.id }}"
                                                             tabindex="-1"
                                                             role="dialog"
                                                             aria-labelledby="confirmModal-{{ Block.id }}"
                                                             aria-hidden="true">
                                                            <div class="modal-dialog" role="document">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title font-weight-bold">
                                                                            {{ 'admin.content.block.delete.confirm.title'|trans }}</h5>
                                                                        <button class="close" type="button"
                                                                                data-dismiss="modal"
                                                                                aria-label="Close"><span
                                                                                    aria-hidden="true">×</span>
                                                                        </button>
                                                                    </div>
                                                                    <div class="modal-body text-left">
                                                                        <p class="text-left">
                                                                            {{ 'admin.content.block.delete.confirm.message'|trans }}</p>
                                                                    </div>
                                                                    <div class="modal-footer">
                                                                        <button class="btn btn-ec-sub" type="button"
                                                                                data-dismiss="modal">{{ 'admin.common.label.cancel'|trans }}
                                                                        </button>
                                                                        <a
                                                                                href="{{ url('admin_content_block_delete', {id: Block.Id} ) }}"
                                                                                class="btn btn-ec-delete"
                                                                                data-confirm="false"
                                                                                {{ csrf_token_for_anchor() }}
                                                                                data-method="delete">
                                                                            {{ 'admin.common.label.ok'|trans }}
                                                                        </a>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card rounded border-0">
                <div class="card-body p-4">
                    <div class="text-center">
                        {# TODO 新規追加ボタンのレイアウトは検討が必要 #}
                        <a href="{{ url('admin_content_block_new') }}" class="btn btn-ec-regular pl-4 pr-4">{{ 'admin.content.block.11'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
