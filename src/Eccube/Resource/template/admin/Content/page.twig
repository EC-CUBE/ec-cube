{% extends '@admin/styleguide_frame.twig' %}

{% set menus = ['content', 'page'] %}

{% block title %}{{ 'admin.content.page.title'|trans }}{% endblock %}
{% block sub_title %}{{ 'admin.content.page.sub_title'|trans }}{% endblock %}

{% block main %}
    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                <div class="row justify-content-between mb-2">
                    <div class="col-9"><a class="btn btn-ec-regular py-2"
                                          href="{{ url('admin_content_page_new') }}">{{ 'admin.content.page.create'|trans }}</a></div>
                    <div class="col-3">
                        <form class="mb-2">
                            <div class="form-row">
                                <div class="col">
                                    <input class="form-control" type="search" placeholder="" aria-label="Search">
                                </div>
                                {# TODO 検索の実装 #}
                                <div class="col-auto">
                                    <button class="btn btn-ec-sub" type="submit"><i
                                                class="fa fa-search fa-lg text-secondary"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card rounded border-0 mb-4">
                    <div class="card-body p-0">
                        <table id="list_page_tbl" class="table table-sm">
                            <thead>
                            <th class="border-0 pt-2 pb-2 pl-3">{{ 'admin.content.page.page_name'|trans }}</th>
                            <th class="border-0 pt-2 pb-2">{{ 'admin.content.page.layout_name'|trans }}</th>
                            <th class="border-0 pt-2 pb-2 pr-3"></th>
                            </thead>
                            {% for Page in Pages %}
                                <tr>
                                    <td class="align-middle pl-3"><a
                                                href="{{ url('admin_content_page_edit', {id : Page.id } ) }}">{{ Page.name }}</a>
                                    </td>
                                    {# TODO レイアウトの数にかかわらず高さを揃えたい #}
                                    <td class="align-middle{{ Page.layouts|length < 2 ? ' pb-4' }}">
                                        {% for Layout in Page.layouts %}
                                            {% if Layout.device_type.id == constant('Eccube\\Entity\\Master\\DeviceType::DEVICE_TYPE_PC') %}
                                                {% set icon = 'fa-desktop' %}
                                            {% else %}
                                                {% set icon = 'fa-mobile fa-2x' %}
                                            {% endif %}
                                            <div class="d-block"><i
                                                        class="fa {{ icon }} mr-2"></i><span>{{ Layout.name }}</span>
                                            </div>
                                        {% endfor %}
                                    </td>
                                    <td class="align-middle pr-3">
                                        <div class="row justify-content-end">
                                            <div class="col-auto text-center" data-toggle="tooltip" data-placement="top" title="{{ 'admin.content.page.delete'|trans }}">
                                                {% if Page.edit_type == constant('Eccube\\Entity\\Page::EDIT_TYPE_USER') %}
                                                    <a class="btn btn-ec-actionIcon" data-toggle="modal" data-target="#delete_{{ Page.id }}">
                                                        <i class="fa fa-close fa-lg text-secondary"
                                                           aria-hidden="true"></i>
                                                    </a>
                                                    <div class="modal fade" id="delete_{{ Page.id }}" tabindex="-1"
                                                         role="dialog"
                                                         aria-labelledby="delete_{{ Page.id }}" aria-hidden="true">
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title font-weight-bold">
                                                                        {{ 'admin.content.page.delete_message'|trans }}</h5>
                                                                    <button class="close" type="button"
                                                                            data-dismiss="modal"
                                                                            aria-label="Close"><span
                                                                                aria-hidden="true">×</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body text-left">
                                                                    <p class="text-left">
                                                                        {{ 'admin.content.page.delete_message'|trans }}</p>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <button class="btn btn-ec-sub" type="button"
                                                                            data-dismiss="modal">{{ 'common.label.cancel'|trans }}
                                                                    </button>
                                                                    <a class="btn btn-ec-delete"
                                                                       href="{{ url('admin_content_page_delete', {'id' : Page.id}) }}" {{ csrf_token_for_anchor() }}
                                                                       data-method="delete"
                                                                       data-confirm="false">{{ 'common.label.delete'|trans }}</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
