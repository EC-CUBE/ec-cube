{% extends '@admin/styleguide_frame.twig' %}

{% set menus = ['content', 'page'] %}

{% block title %}{{ 'admin.content.page.69'|trans }}{% endblock %}
{% block sub_title %}{{ 'admin.content.page.70'|trans }}{% endblock %}

{% block main %}
    <div class="c-contentsArea__cols">
        <div class="c-contentsArea__primaryCol">
            <div class="c-primaryCol">
                <div class="row justify-content-between mb-2">
                    <div class="col-9"><a class="btn btn-ec-regular py-2"
                                          href="{{ url('admin_content_page_new') }}">新規追加</a></div>
                    <div class="col-3">
                        <form class="mb-2">
                            <div class="form-row">
                                <div class="col">
                                    <input class="form-control" type="search" placeholder="" aria-label="Search">
                                </div>
                                {# TODO 検索の実装 #}
                                <div class="col-auto">
                                    <button class="btn btn-ec-sub" type="submit"><i
                                                class="fa fa-search fa-lg text-secondary"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card rounded border-0 mb-4">
                    <div class="card-body p-0">
                        <table class="table table-sm">
                            <thead>
                            <th class="border-0 pt-2 pb-2 pl-3"> ページ名</th>
                            <th class="border-0 pt-2 pb-2">レイアウト</th>
                            <th class="border-0 pt-2 pb-2 pr-3"></th>
                            </thead>
                            {% for Page in Pages %}
                                <tr>
                                    <td class="align-middle pl-3"><a
                                                href="{{ url('admin_content_page_edit', {id : Page.id } ) }}">{{ Page.name }}</a>
                                    </td>
                                    {# TODO レイアウトの数にかかわらず高さを揃えたい #}
                                    <td class="align-middle{{ Page.layouts|length < 2 ? ' pb-4' }}">
                                        {% for Layout in Page.layouts %}
                                            {% if Layout.device_type.id == constant('Eccube\\Entity\\Master\\DeviceType::DEVICE_TYPE_PC') %}
                                                {% set icon = 'fa-desktop' %}
                                            {% else %}
                                                {% set icon = 'fa-mobile fa-2x' %}
                                            {% endif %}
                                            <div class="d-block"><i
                                                        class="fa {{ icon }} mr-2"></i><span>{{ Layout.name }}</span>
                                            </div>
                                        {% endfor %}
                                    </td>
                                    <td class="align-middle pr-3">
                                        <div class="row justify-content-end">
                                            {# TODO 削除はモーダル化が必要かどうか確認 #}
                                            {# TODO 削除出来ないページの表示 #}
                                            <div class="col-auto text-center">{% if Page.edit_type == constant('Eccube\\Entity\\Page::EDIT_TYPE_USER') %}
                                                <a class="btn btn-ec-actionIcon"
                                                   data-toggle="tooltip"
                                                   data-placement="top"
                                                   title="{{ 'common.label.delete'|trans }}"
                                                   href="{{ url('admin_content_page_delete', { 'id': Page.id}) }}" {{ csrf_token_for_anchor() }}
                                                   data-method="delete"
                                                   data-message="{{ 'admin.content.page.77'|trans }}"><i
                                                                class="fa fa-close fa-lg text-secondary"
                                                                aria-hidden="true"></i></a>{% endif %}
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
