{% extends '@admin/styleguide_frame.twig' %}

{% set menus = ['content', 'layout'] %}

{% block title %}{{'admin.content.layout_list.46'|trans}}{% endblock %}
{% block sub_title %}{{'admin.content.layout_list.45'|trans}}{% endblock %}

{% block javascript %}
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.core.min.js', 'admin') }}"></script>
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.widget.min.js', 'admin') }}"></script>
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.mouse.min.js', 'admin') }}"></script>
    <script src="{{ asset('assets/js/vendor/jquery.ui/jquery.ui.sortable.min.js', 'admin') }}"></script>
    <script>
        $(function () {
            var update = [];
            var confirmMove = $('#confirmMove');
            var containerRows = $('div.sortables');
            containerRows.each(function () {
                updateSortNumber($(this));
            });

            confirmMove.on('click', 'button', function () {
                if ($(this).hasClass('btn-ec-conversion')) {
                    confirmMove.data('confirm', true);
                } else {
                    confirmMove.data('confirm', false);
                }
            });

            function updateSortNumber(mainRows) {
                var layoutId = mainRows.attr('data-layout-id');

                mainRows.sortable({
                    items: ' > div.card-body',
                    connectWith: "div.ec-cardCollapse",
                    cursor: 'move',
                    start: function (ev, ui) {
                        ui.item.prop('main', ui.item.parent());
                        ui.item.prop('isUpdate', false);
                        ui.item.prop('isOtherList', false);
                    },
                    beforeStop: function (ev, ui) {
                        if (ui.item.prop('main').attr('id') != ui.item.parent().attr('id')) {
                            ui.item.prop('isOtherList', true);
                            confirmMove.modal('show');
                            confirmMove.off('hidden.bs.modal');
                            confirmMove.on('hidden.bs.modal', function () {
                                if (confirmMove.data('confirm') == false) {
                                    mainRows.sortable("cancel");
                                }

                                if (confirmMove.data('confirm') == true) {
                                    if (ui.item.parent().find('[data-page-id="' + ui.item.data('page-id') + '"]').length > 1) {
                                        $('#duplicateNotification').modal('show');
                                        mainRows.sortable("cancel");
                                    } else {
                                        $.each(update, function (a, b) {
                                            updateSortNo(b[0], b[1]);
                                        });
                                        update = [];
                                    }
                                }
                            });
                        }
                    },
                    update: function (e, ui) {
                        if (ui.item.prop('isOtherList')) {
                            update.push([mainRows, layoutId]);
                        } else {
                            updateSortNo(mainRows, layoutId);
                        }
                    }
                });
            }

            function updateSortNo(mainRows, layoutId) {
                $(".modal-backdrop").remove();
                $("body").append($('<div class="modal-backdrop show"></div>'));
                var items = $('div.card-body', mainRows);
                if (items.length > 0) {
                    var newSortNos = {};
                    var i = 1;
                    items.each(function () {
                        if (this.dataset.pageId != undefined && this.dataset.layoutId != undefined) {
                            newSortNos[this.dataset.pageId + '-' + this.dataset.layoutId] = i;
                            i++;
                        }
                    });

                    $.ajax({
                        url: '{{ url('admin_content_layout_sort_no_move') }}',
                        type: 'POST',
                        data: {'newSortNos': newSortNos, 'targetLayoutId': layoutId}
                    }).done(function (data) {
                        $('div.empty-item', mainRows).hide();
                        items.each(function () {
                            $(this).attr('data-layout-id', layoutId);
                        });
                        $(".modal-backdrop").remove();
                    }).fail(function () {
                        console.log('Failed');
                        $(".modal-backdrop").remove();
                    });
                } else {
                    $('div.empty-item', mainRows).show();
                }
            }

            {# TODO: JS logic should move to js file, not html #}
            var formDefaultLayout = $('#form_default_layout');
            formDefaultLayout.find('[name="default_layout"]').on('change', function(event) {
                var url = $(this).find('option[value="' + $(this).val() +'"]').data('url');
                formDefaultLayout.attr('action', url);
            }).trigger('change');
        });
    </script>
{% endblock %}

