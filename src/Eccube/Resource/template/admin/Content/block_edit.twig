{% extends '@admin/styleguide_frame.twig' %}

{% set menus = ['content', 'block'] %}

{% block title %}{{'admin.content.block_edit.13'|trans}}{% endblock %}
{% block sub_title %}{{'admin.content.block_edit.12'|trans}}{% endblock %}

{% form_theme form '@admin/Form/bootstrap_4_horizontal_layout.html.twig' %}

{% block javascript %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.2.8/ace.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.2.8/ext-language_tools.js"></script>
    <script>
        ace.require("ace/ext/language_tools");
        var editor = ace.edit("editor");
        editor.session.setMode("ace/mode/twig");
        editor.setTheme("ace/theme/tomorrow");
        editor.setValue("{{ form.block_html.vars.value|escape('js') }}");
        editor.setOptions({
            enableBasicAutocompletion: true,
            enableSnippets: true,
            enableLiveAutocompletion: true,
            showInvisibles: true
        });

        $('#content_block_form').on('submit', function (elem) {
            $('#block_block_html').val(editor.getValue());
        });
    </script>
{% endblock %}

{% block main %}
    <form name="content_block_form" id="content_block_form" method="post" action="
                {%- if block_id is not null %}{{ url('admin_content_block_edit', {id: block_id}) }}{% else %}{{ url('admin_content_block_new')}}{% endif -%}">
        {{ form_widget(form._token) }}
        {{ form_widget(form.id) }}
        {{ form_widget(form.DeviceType, { attr : { style : 'display: none;' } } ) }}
        <div class="c-contentsArea__cols">
            <div class="c-contentsArea__primaryCol">
                <div class="c-primaryCol">
                    <div class="card rounded border-0 mb-4">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-8"><span class="card-title">{{'admin.content.block_edit.14'|trans}}</span></div>
                                <div class="col-4 text-right">
                                    <a data-toggle="collapse" href="#blockEdit" aria-expanded="false" aria-controls="blockEdit">
                                        <i class="fa fa-angle-up fa-lg"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="collapse show ec-cardCollapse" id="blockEdit">
                            <div class="card-body">
                                <div class="row mb-2">
                                    <div class="col-2">
                                        <span>{{ form_label(form.name) }}</span>{# TODO form_label を使うと崩れる #}
                                        <i class="fa fa-question-circle fa-lg ml-1"></i>
                                        <span class="badge badge-primary ml-1">{{ 'common.text.message.required'|trans }}</span>
                                    </div>
                                    <div class="col-10">
                                        {{ form_widget(form.name) }}
                                        {{ form_errors(form.name) }}
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row mb-2">
                                    <div class="col-2">
                                        <span>{{ form_label(form.file_name) }}</span>{# TODO form_label を使うと崩れる #}
                                        <i class="fa fa-question-circle fa-lg ml-1"></i>
                                        <span class="badge badge-primary ml-1">{{ 'common.text.message.required'|trans }}</span>
                                    </div>
                                    <div class="col-10">
                                        {% if deletable %}
                                            {{ form_widget(form.file_name) }}.twig
                                        {% else %}
                                            {{ form.file_name.vars.value }}.twig
                                            {{ form_widget(form.file_name, { type : 'hidden' } ) }}
                                        {% endif %}
                                        {{ form_errors(form.file_name) }}
                                    </div>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="row mb-2">
                                    <div class="col-2">
                                        <span>{{ form_label(form.block_html) }}</span>{# TODO form_label を使うと崩れる #}
                                        <i class="fa fa-question-circle fa-lg ml-1"></i>
                                        <span class="badge badge-primary ml-1">{{ 'common.text.message.required'|trans }}</span>
                                    </div>
                                    <div id="editor" style="height: 480px" class="form-control{{ has_errors(form.block_html) ? ' is-invalid'}}"></div>
                                    {{ form_widget(form.block_html) }}
                                    {{ form_errors(form.block_html) }}
                                </div>
                                <div class="card-body">
                                    <div class="row mb-2 extra-form">
                                        {% for f in form.getIterator %}
                                            {% if f.vars.name matches '[^plg*]' %}
                                                {{ form_row(f) }}
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="c-conversionArea">
            <div class="c-conversionArea__container">
                <div class="row justify-content-between align-items-center">
                    <div class="col-6">
                        <div class="c-conversionArea__leftBlockItem">
                            <a class="c-beseLink" href="{{ url('admin_content_block') }}">
                                <i class="fa fa-backward" aria-hidden="true"></i><span>{{ 'admin.content.block.7'|trans }}</span>
                            </a>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="row align-items-center justify-content-end">
                            <div class="col-auto">
                                <button class="btn btn-ec-conversion px-5" type="submit">{{'admin.content.block_edit.16'|trans}}</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
