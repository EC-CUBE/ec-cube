<script>window.jQuery || document.write('<script src="{{ asset('assets/js/vendor/jquery-1.11.3.min.js', 'admin') }}"><\/script>')</script>
</head>
<body id="page_{{ app.request.get('_route') }}">
<div id="wrapper" class="sidebar-open">
    <!-- ▼ #header ▼ -->
    <header id="header" role="navigation">
        <div class="navbar navbar-static-top">
            <div class="logo" href="./"><img src="{{ asset('assets/img/logo.png', 'admin') }}" width="172"></div>
            <!-- Sidebar toggle button-->

            <div class="bt_toggle">
                <a role="button" data-toggle="offcanvas" class="bt_drawermenu" href="#"> <span class="sr-only">Toggle navigation</span>
                    <svg class="cb cb-bars">
                        <use xlink:href="#cb-bars"/>
                    </svg>
                </a>
            </div>
            <a href="{{ url('homepage') }}" id="sitename" target="_blank">{{ BaseInfo.shop_name }}<span class="cb cb-external-link"></span></a>
            <!-- Navbar Right Menu -->
            <div class="navbar-menu">
                <dl class="dropdown">
                    {% if is_granted('ROLE_ADMIN') %}
                        <dt class="dropdown-toggle" data-toggle="dropdown">
                            <svg class="cb cb-user-circle">
                                <use xlink:href="#cb-user-circle" />
                            </svg>
                            <span class="hidden-xs">{{ app.user.name }}</span>
                            <svg class="cb cb-angle-down icon_down">
                                <use xlink:href="#cb-angle-down" />
                            </svg>
                        </dt>
                        <dd class="dropdown-menu">
                            {{'admin.default_frame.153'|trans}}<br>
                            {{ app.user.login_date.format('Y/m/d H:i')|default('') }}
                            <a class="btn btn-primary btn-xs" href="{{ url('admin_change_password') }}">{{'admin.default_frame.154'|trans}}</a>
                            <a class="btn btn-primary btn-xs" href="{{ url('admin_logout') }}">{{'admin.default_frame.155'|trans}}</a>
                        </dd>
                    {% endif %}
                </dl>
            </div>
        </div>
    </header>
    <!-- ▲ #header ▲ -->
    <!-- ▼ #side ▼ -->
    <aside id="side">
        <ul class="nav nav-sidebar">
            <li>
                <a href="{{ url('admin_homepage') }}">
                    <svg class="cb cb-home"><use xlink:href="#cb-home" /></svg>{{'admin.default_frame.156'|trans}}<svg class="cb cb-angle-down"><use xlink:href="#cb-angle-down" /></svg>
                </a>
            </li>
            {{ include('@admin/nav.twig') }}
        </ul>
    </aside>
    <!-- ▲ #side ▲ -->
    <!-- ▼ #main ▼ -->
    <div id="main">
        <h1 class="page-header">{{ block('title') }}<span>{{ block('sub_title') }}</span></h1>

        <div class="container-fluid">

            {{ include('@admin/alert.twig') }}

            {% block main %}{% endblock %}

        </div>
    </div>
    <!-- ▲ #main ▲ -->

    <!-- ▼ #modal ▼ -->
    {% block modal %}{% endblock %}
    <!-- ▲ #modal ▲ -->

</div>

<script src="{{ asset('assets/js/vendor/bootstrap.min.js', 'admin') }}"></script>
<script src="{{ asset('assets/js/vendor/ie10-viewport-bug-workaround.js', 'admin') }}"></script>
<script src="{{ asset('assets/js/function.js', 'admin') }}"></script>
<script>
$(function () {
    $.ajax({
        url: "{{ asset('assets/img/svg.html', 'admin') }}",
        type: 'GET',
        dataType: 'html',
    }).done(function(data){
        $('body').prepend(data);
    }).fail(function(data){
    });
});
</script>
{% block javascript %}{% endblock %}
</body>
</html>
