<div class="ec-headerSearch">
    <form method="get" id="searchform" action="{{ path('product_list') }}">
        <div class="ec-headerSearch__category">
            <div class="ec-select">
                {{ form_widget(form.category_id) }}
            </div>
        </div>
        <div class="ec-headerSearch__keyword">
            <div class="ec-input">
                {{ form_widget(form.name, {'attr': { 'placeholder' : "common.placeholder.searchbox" }} ) }}
                <button class="ec-headerSearch__keywordBtn" type="submit">
                    <div class="ec-icon"><img src="{{ asset('assets/icon/search-dark.svg') }}" alt=""></div>
                </button>
            </div>
        </div>
    </form>
</div>
