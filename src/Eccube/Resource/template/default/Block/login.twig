{% if is_granted('ROLE_USER') %}
    <div class="ec-headerNav">
        <div class="ec-headerNav__item">
            <a class="ec-icon" href="{{ url('mypage') }}"><img src="{{ app.config.front_urlpath }}/assets/icon/user.svg"
                                                              alt=""><span>マイページ</span></a>
        </div>
        {% if BaseInfo.option_favorite_product == 1 %}
            <div class="ec-headerNav__item">
                <a class="ec-icon" href="{{ url('mypage_favorite') }}"><img
                            src="{{ app.config.front_urlpath }}/assets/icon/favorite.svg"
                            alt=""><span>お気に入り</span></a>
            </div>
        {% endif %}
        <div class="ec-headerNav__item">
            <a class="ec-icon" href="{{ url('logout') }}"><img src="{{ app.config.front_urlpath }}/assets/icon/login.svg"
                                                                     alt=""><span>ログアウト</span></a>
        </div>
    </div>
{% else %}
    <div class="ec-headerNav">
        <div class="ec-headerNav__item">
            <a class="ec-icon" href="{{ url('entry') }}"><img src="{{ app.config.front_urlpath }}/assets/icon/user.svg"
                                                              alt=""><span>新規会員登録</span></a>
        </div>
        {% if BaseInfo.option_favorite_product == 1 %}
            <div class="ec-headerNav__item">
                <a class="ec-icon" href="{{ url('mypage_favorite') }}"><img
                            src="{{ app.config.front_urlpath }}/assets/icon/favorite.svg"
                            alt=""><span>お気に入り</span></a>
            </div>
        {% endif %}
        <div class="ec-headerNav__item">
            <a class="ec-icon" href="{{ url('mypage_login') }}"><img src="{{ app.config.front_urlpath }}/assets/icon/login.svg"
                                                                     alt=""><span>ログイン</span></a>
        </div>
    </div>
{% endif %}