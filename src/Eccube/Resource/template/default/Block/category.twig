{% macro tree(Categories) %}
    {% for Category in Categories %}
        <li>
            {% if Category.children|length > 0 %}
            <a class="has-toggle" href="{{ url('product_list') }}?category_id={{ Category.id }}">{{ Category.name }}<span class="toggle"><svg class="cb cb-angle-down"><use xlink:href="#cb-angle-down" /></svg></span></a>
            <ul>
                {% for ChildCategory in Category.children %}
                    {{ _self.tree(ChildCategory.children) }}
                {% endfor %}
            </ul>
            {% else %}
            <a href="{{ url('product_list') }}?category_id={{ Category.id }}">{{ Category.name }}</a>
            {% endif %}
        </li>
    {% endfor %}
{% endmacro %}

<nav id="category" class="drawer_block pc">
    <ul class="category-nav">
        {{ _self.tree(Categories) }}
    </ul> <!-- category-nav -->
</nav>