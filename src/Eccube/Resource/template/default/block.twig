{% for Block in Blocks %}
    <!-- ▼{{ Block.name }} -->
    {% if Block.use_controller %}
        {% if app.config.http_cache.enabled %}
            {{ render_esi(path('block_' ~ Block.file_name)) }}
        {% else %}
            {{ render(path('block_' ~ Block.file_name)) }}
        {% endif %}
    {% else %}
        {{ include('Block/' ~ Block.file_name~ '.twig', ignore_missing = true) }}
    {% endif %}
    <!-- ▲{{ Block.name }} -->
{% endfor %}
