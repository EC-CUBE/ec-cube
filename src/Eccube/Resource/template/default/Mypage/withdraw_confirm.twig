{% extends 'default_frame.twig' %}

{% set mypageno = 'withdraw' %}

{% set body_class = 'mypage' %}

{% block main %}
    <div class="ec-layoutRole__main">
        <div class="ec-mypageRole">
            <div class="ec-pageHeader">
                <h1>マイページ/退会手続き</h1>
            </div>
            {{ include('Mypage/navi.twig') }}
        </div>
        <div class="ec-mypageRole">
            <div class="ec-withdrawConfirmRole">
                <div class="ec-off3Grid">
                    <div class="ec-off3Grid__cell">
                        <div style="font-size:100px;text-align:center;">
                            <div class="ec-icon"><img src="{{ app.config.front_urlpath }}/assets/icon/exclamation.svg" alt=""></div>
                        </div>
                        <p class="ec-withdrawConfirmRole__title">退会手続きを実行してもよろしいでしょうか？</p>
                        <p class="ec-withdrawConfirmRole__description">退会手続きが完了した時点で、現在保存されている購入履歴やお届け先等の情報は、すべて削除されますのでご注意ください。
                        </p>
                    </div>
                </div>
                <form method="post" action="{{ url('mypage_withdraw') }}">
                    {{ form_widget(form._token) }}
                    <div class="ec-off4Grid">
                        <div class="ec-off4Grid__cell"><a class="ec-withdrawConfirmRole__cancel ec-blockBtn--cancel" href="{{ url('mypage') }}">いいえ、退会しません</a>
                            <button type="submit" class="ec-blockBtn" name="mode" value="complete">はい、退会します</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
