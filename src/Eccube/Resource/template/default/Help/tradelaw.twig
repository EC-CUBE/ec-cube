{% extends 'default_frame.twig' %}

{% block main %}
    <div class="ec-role">
        <div class="ec-pageHeader">
            <h1>特定商取引法に基づく表記</h1>
        </div>
        <div class="ec-off1Grid">
            <div class="ec-off1Grid__cell">
                <div class="ec-borderedDefs">
                    {% if help.company is defined %}
                        <dl id="trade_company">
                            <dt>販売業者</dt>
                            <dd>{{ help.company }}</dd>
                        </dl>
                    {% endif %}

                    {% if help.manager is defined %}
                        <dl id="trade_manager">
                            <dt>運営責任者</dt>
                            <dd>{{ help.manager }}</dd>
                        </dl>
                    {% endif %}

                    {% if help.zip01 is defined %}
                        <dl id="trade_zip">
                            <dt>住所</dt>
                            <dd>〒{{ help.zip01 }}-{{ help.zip02 }}<br />
                                {{ help.pref|default('') }}{{ help.addr01 }}{{ help.addr02 }}
                            </dd>
                        </dl>
                    {% endif %}

                    {% if help.tel01 is defined %}
                        <dl id="trade_tel">
                            <dt>電話番号</dt>
                            <dd>{{ help.tel01 }}-{{ help.tel02 }}-{{ help.tel03 }}</dd>
                        </dl>
                    {% endif %}

                    {% if help.fax01 is defined and help.fax01 is not empty %}
                        <dl id="trade_fax">
                            <dt>FAX番号</dt>
                            <dd>{{ help.fax01 }}-{{ help.fax02 }}-{{ help.fax03 }}</dd>
                        </dl>
                    {% endif %}

                    {% if help.email is defined %}
                        <dl id="trade_email">
                            <dt>メールアドレス</dt>
                            <dd><a href="mailto:{{ help.email }}">{{ help.email }}</a></dd>
                        </dl>
                    {% endif %}

                    {% if help.url is defined %}
                        <dl id="trade_url">
                            <dt>URL</dt>
                            <dd><a href="{{ help.url }}">{{ help.url }}</a></dd>
                        </dl>
                    {% endif %}

                    {% if help.term01 is defined %}
                        <dl id="trade_term01">
                            <dt>商品以外の必要代金</dt>
                            <dd>{{ help.term01|nl2br }}</dd>
                        </dl>
                    {% endif %}

                    {% if help.term02 is defined %}
                        <dl id="trade_term02">
                            <dt>注文方法</dt>
                            <dd>{{ help.term02|nl2br }}</dd>
                        </dl>
                    {% endif %}

                    {% if help.term03 is defined %}
                        <dl id="trade_term03">
                            <dt>支払方法</dt>
                            <dd>{{ help.term03|nl2br }}</dd>
                        </dl>
                    {% endif %}

                    {% if help.term04 is defined %}
                        <dl id="trade_term04">
                            <dt>支払期限</dt>
                            <dd>{{ help.term04|nl2br }}</dd>
                        </dl>
                    {% endif %}

                    {% if help.term05 is defined %}
                        <dl id="trade_term05">
                            <dt>引渡し時期</dt>
                            <dd>{{ help.term05|nl2br }}</dd>
                        </dl>
                    {% endif %}

                    {% if help.term06 is defined %}
                        <dl id="trade_term06">
                            <dt>返品・交換について</dt>
                            <dd>{{ help.term06|nl2br }}</dd>
                        </dl>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
