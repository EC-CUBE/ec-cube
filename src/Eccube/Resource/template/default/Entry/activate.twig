{% extends 'default_frame.twig' %}

{% set body_class = 'registration_page' %}

{% block main %}
    <div class="ec-role">
        <div class="ec-pageHeader">
            <h1>{{'signup.text.message.completed'|trans}}</h1>
        </div>
    </div>
    <div class="ec-registerCompleteRole">
        <div class="ec-off3Grid ec-text-ac">
            <div class="ec-off3Grid__cell">
                <div class="ec-reportHeading">
                    <h2>{{'signup.text.message.thanks'|trans}}</h2>
                </div>
                <p class="ec-reportDescription">{{'shopping.text.message.enjoy'|trans}}<br>{{'signup.text.message.look_forward'|trans}}</p>
                <div class="ec-off4Grid">
                    <div class="ec-off4Grid__cell">
                        {% if qtyInCart %}
                            <a class="ec-blockBtn--action" style="margin-bottom: 3px" href="{{ url('cart') }}">{{'shopping.label.btn.goto_cart'|trans}}</a>
                        {% endif %}
                        <a class="ec-blockBtn--cancel" href="{{ url('homepage') }}">{{'common.label.back_to_top'|trans}}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
