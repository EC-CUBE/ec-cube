<script type="text/javascript" src="{{ app.config.root }}js/jquery.colorbox/jquery.colorbox-min.js"></script>
<title>{{ BaseInfo.shop_name }}{% if subtitle is defined %}/{{ subtitle }}{% endif %}</title>
<link rel="shortcut icon" href="{{ app.config.tpl }}img/common/favicon.ico" />
<link rel="icon" type="image/vnd.microsoft.icon" href="{{ app.config.tpl }}img/common/favicon.ico" />
<script type="text/javascript">//<![CDATA[
    {{ block('javascript') }}
    $(function(){
        {{ block('onload') }}
    });
//]]></script>
</head>

<body>
    <noscript>
        <p><em>JavaScriptを有効にしてご利用下さい.</em></p>
    </noscript>
    <a name="top" id="top"></a>
    <div id="windowcolumn">
        {% block main %}{% endblock %}
    </div>
</body>
</html>
