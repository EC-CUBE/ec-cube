<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta name="description" content="">
<meta name="author" content="">
<link rel="icon" href="favicon.ico">
<title>{{ app.config.shop_name }} - EC-CUBE管理画面</title>

<!-- Bootstrap core CSS -->
<link href="{{ app.config.root }}admin/dist/css/bootstrap.min.css" rel="stylesheet">

<!-- Custom styles for this template -->
<link href="{{ app.config.root }}admin/assets/css/dashboard.css" rel="stylesheet">
<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

<!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
<script src="{{ app.config.root }}admin/assets/js/ie10-viewport-bug-workaround.js"></script>
<!-- HTML5 shiv and Respond.js IE8 support of HTML5 elements and media queries -->
<!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body data-target="#scrollspy" data-spy="scroll">
<div id="wrapper"> 
    <!-- ▼ #header ▼ -->
    <header id="header" role="navigation">
        <div class="navbar navbar-static-top">
            <div class="logo" href="./"><img src="{{ app.config.root }}admin/assets/img/logo.png" width="172"></div>
            <!-- Sidebar toggle button-->
            <div class="bt_toggle"> <a role="button" data-toggle="offcanvas" class="bt_drawermenu" href="#"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </a> </div>
            <a href="{{ url('homepage') }}" id="sitename">{{ app.config.shop_name }}<span class="fa fa-external-link"></span></a> 
            <!-- Navbar Right Menu -->
            <div class="navbar-menu">
                <dl class="dropdown">
                    {% if is_granted('ROLE_ADMIN') %}
                        <dt class="dropdown-toggle" data-toggle="dropdown">
                            <span class="fa-stack fa-lg"> 
                                <span class="fa fa-circle fa-stack-2x"></span> 
                                <span class="fa fa-user fa-stack-1x fa-inverse"></span> 
                            </span> 
                                <span class="hidden-xs">{{ app.user.name }} 様</span>
                                <span class="fa fa-chevron-down icon_down"></span>
                        </dt>
                        <dd class="dropdown-menu">
                            最終ログイン<br>
                            {{ app.user.login_date.format('Y/m/d H:i')|default('') }} <a class="btn btn-info btn-xs" href="{{ url('admin_logout') }}">ログアウト</a> 
                        </dd>
                    {% endif %}
                </dl>
            </div>
        </div>
    </header>
    <!-- ▲ #header ▲ --> 
    <!-- ▼ #side ▼ -->
    <aside id="side">
        <ul class="nav nav-sidebar">
            <li><a href="./" class="active"><span class="fa fa-home"></span>ホーム<span class="fa fa-chevron-down"></span></a></li>
            {{ include('Admin/Product/subnavi.twig') }}
            {{ include('Admin/Order/subnavi.twig') }}
            {{ include('Admin/Report/subnavi.twig') }}
            {{ include('Admin/Customer/subnavi.twig') }}
            {{ include('Admin/Content/subnavi.twig') }}
            {{ include('Admin/Setting/subnavi.twig') }}
        </ul>
    </aside>
    <!-- ▲ #side ▲ --> 
    <!-- ▼ #main ▼ -->
    <div id="main">
        <h1 class="page-header">{{ block('title') }}<span>{{ block('sub_title') }}</span></h1>
        <div class="container-fluid">

            {{ include('Admin/alert.twig') }}

            {% block main %}{% endblock %}

        </div>
    </div>
    <!-- ▲ #main ▲ --> 
    
    <!-- ▼ #footer ▼ --> 
    <footer id="footer">
        <small class="copyright">Copyright &copy; 2000-{{ "now"|date("Y") }} <a href="http://www.ec-cube.net">EC-CUBE</a>. All rights reserved.</small>
    </footer>
    <!-- ▲ #footer ▲ --> 
    
</div>

<!-- Bootstrap core JavaScript
    ================================================== --> 
<!-- Placed at the end of the document so the pages load faster --> 
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script> 
<script src="{{ app.config.root }}admin/dist/js/bootstrap.min.js"></script> 
<script src="{{ app.config.root }}admin/assets/js/function.js"></script>
<script type="text/javascript" src="{{ app.config.root }}js/eccube.js"></script>
<script type="text/javascript" src="{{ app.config.admin_tpl }}js/eccube.admin.js"></script>
<script type="text/javascript" src="{{ app.config.root }}js/jquery.colorbox/jquery.colorbox-min.js"></script>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script type="text/javascript">//<![CDATA[
    {{ block('javascript') }}
    $(function(){
        {{ block('onload') }}
    });
//]]></script>
</body>
</html>