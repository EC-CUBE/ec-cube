    <div class="block_outer">
        <div id="news_area">
            <h2>
                <img src="{{ app.config.tpl }}img/title/tit_bloc_news.png" alt="新着情報" />
            </h2>
            <div class="block_body">
                <div class="news_contents">
                {% for News in NewsList %}
                <!--{assign var="date_array" value="-"|explode:$arrNews[data].cast_news_date}-->
                <dl class="newslist">
                    <dt>{{ News.date|date("Y年m月d日") }}</dt>
                    <dt>
                        <a {% if News.url is not null %} href="{{ News.url }}" {% if News.link_method == 2 %} target="_blank" {% endif %}{% endif %}>
                            {{ News.title }}
                        </a>
                    </dt>
                    <dd class="mini">{{ News.comment }}</dd>
                </dl>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
